<UserControl x:Class="Wpf_IMAnn.Views.WindowTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf_IMAnn.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Grid.Column="1" BorderThickness="0,0,1,0" Padding="0,15,20,15" BorderBrush="#FF515050" >
            <StackPanel Orientation="Horizontal" >
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="0,0,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <!--<Button x:Name="OpenCamLeft" FontSize="15" Width="70" Padding="5" Content="Camera&#10;  Left" BorderBrush="#FFB3B0AD" Background="#FFF3F2F1" BorderThickness="1,0,0,0"></Button>
                <Button x:Name="OpenCamHead" FontSize="15" Width="70"  Padding="5" Content="Camera&#10;  Head" BorderBrush="#FFB3B0AD" Background="#FFF3F2F1" BorderThickness="1,0,0,0"></Button>
                <Button x:Name="OpenCamRight" FontSize="15" Width="70" Padding="5" Content="Camera&#10; Right" BorderBrush="#FFB3B0AD" Background="#FFF3F2F1" BorderThickness="1,0,0,0"></Button>
                <Button x:Name="OpenMap" FontSize="15" Width="70" Padding="5" Content="Map" BorderBrush="#FFB3B0AD" Background="#FFF3F2F1" BorderThickness="1,0,1,0"></Button>-->
                <Button x:Name="OpenHelp" FontSize="15" Width="70" Padding="5" Content="도우미" BorderBrush="#FFB3B0AD" Background="#FFF3F2F1" BorderThickness="1,0,1,0"></Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
